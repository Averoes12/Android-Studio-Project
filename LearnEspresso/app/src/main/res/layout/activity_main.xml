<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.averoes.daff.learnespresso.MainActivity"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_text"
        android:layout_marginBottom="16dp"
        android:maxLines="1"
        android:inputType="text"
        android:hint="@string/input_teks"/>

    <TextView
        android:id="@+id/reuslt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hasil_cetak_teks"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_ubah_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ubah_text" />

    <Button
        android:id="@+id/btn_move_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pindah_activity"/>


</LinearLayout>
